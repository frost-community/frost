{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
