{
  "name": "Frost-Backend",
  "build": {
    "dockerfile": "../../backend/Dockerfile",
    "context": "../../",
    "target": "devcontainer"
  },
  "updateRemoteUserUID": true,
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/Frost/backend",
  "mounts": [
    "source=${localWorkspaceFolderBasename}-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind"
  ],
  "postCreateCommand": "/workspaces/Frost/.devcontainer/backend/post_create.sh",
  "shutdownAction": "none"
}
