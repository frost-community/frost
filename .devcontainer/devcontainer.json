{
  "name": "Frost",
  "dockerComposeFile": "docker-compose.yml",
  "service": "frost-devcontainer",
  // "build": {
  //   "dockerfile": "../frontend/Dockerfile",
  //   "context": "../",
  //   "target": "devcontainer"
  // },
  "workspaceFolder": "/workspaces/Frost",
  "postCreateCommand": "/workspaces/Frost/.devcontainer/post_create.sh",
  // "updateRemoteUserUID": true,
  "remoteUser": "vscode",
  "shutdownAction": "none",
  // "forwardPorts": [3000, 5432],
  "mounts": [
    "source=frost-backend-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions",
        "timonwong.shellcheck",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
